        await Html.RenderPartialAsync("_CreateOrUpdate", Model);
    }
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</form>