@model SampleProjects.Models.ViewModels.ProductModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Product</h1>

<h4>Product</h4>
<hr />
<form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
